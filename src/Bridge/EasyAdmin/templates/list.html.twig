{% extends base_template %}
{% trans_default_domain 'JoliMediaEasyAdminBundle' %}

{% block page_title %}{{ 'media_explorer'|trans }} - {{ current_key ? current_key : 'root'|trans }}{% endblock %}

{% block body_class %}ea-content-width-full{% endblock %}

{% block page_content %}
    {{ block('body_breadcrumb') }}
    {{ block('body_content_header_wrapper') }}

    <div class="gallery">
        {% if app.session.get('view_mode') == 'list' %}
            <table class="table datagrid gallery-list {{ (directories|length + medias|length) == 0 ? 'datagrid-empty' }}">
                <thead>
                    <tr>
                        <th data-column="name" class="text-left" dir="ltr">
                            <span>{{ 'media.name'|trans }}</span>
                        </th>
                        <th data-column="type" class="text-left" dir="ltr">
                            <span>{{ 'media.type.label'|trans }}</span>
                        </th>
                        <th data-column="file-size" class="text-left" dir="ltr">
                            <span>{{ 'media.size.label_long'|trans }}</span>
                        </th>
                        <th data-column="dimensions" class="text-left" dir="ltr">
                            <span>{{ 'media.dimensions'|trans }}</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% if parent_key != '' and current_key != '.' -%}
                        <tr>
                            <td data-column="name" data-label="name" class="text-left" dir="ltr">
                                <a href="{{ ea_url().setRoute(route_name, '.' != parent_key ? { key: parent_key } : { }) }}" class="gallery-list-item gallery-list-item--back">
                                    <span class="gallery-list-item__icon"><i class="fas fa-arrow-left"></i></span>
                                    {{ 'back'|trans }}
                                </a>
                            </td>
                            <td data-column="type" data-label="name" class="text-left" dir="ltr">
                                <span class="badge badge-info">{{ 'directory.label'|trans }}</span>
                            </td>
                            <td data-column="file-size" data-label="name" class="text-left" dir="ltr">
                                &nbsp;
                            </td>
                            <td data-column="dimensions" data-label="name" class="text-left" dir="ltr">
                                &nbsp;
                            </td>
                        </tr>
                    {% endif %}
                    {% for directory in directories %}
                        {% if joli_media_admin_is_granted('LIST', path: directory) %}
                            <tr>
                                <td data-column="name" data-label="name" class="text-left" dir="ltr">
                                    <a href="{{ ea_url().setRoute(route_name, { key: directory }) }}" class="gallery-list-item">
                                        <span class="gallery-list-item__icon"><i class="fa fa-folder"></i></span>
                                        <span class="gallery-list-item__name">{{ directory|joli_media_admin_basename }}</span>
                                    </a>
                                </td>
                                <td data-column="type" data-label="name" class="text-left" dir="ltr">
                                    <span class="badge badge-info">{{ 'directory.label'|trans }}</span>
                                </td>
                                <td data-column="file-size" data-label="name" class="text-left" dir="ltr">
                                    &nbsp;
                                </td>
                                <td data-column="dimensions" data-label="name" class="text-left" dir="ltr">
                                    &nbsp;
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                    {% for media in medias %}
                        {% if joli_media_admin_is_granted('SHOW', path: media.path) %}
                            {{ block('media_list_view') }}
                        {% endif %}
                    {% endfor %}
                    {% if directories|length + medias|length == 0 %}
                        <tr>
                            <td colspan="4" class="text-center">
                                <div class="alert alert-info">
                                    <i class="fa fa-info"></i> <strong>{{ 'no_file_found'|trans }}</strong>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        {% else %}
            <ul class="gallery-grid gallery-grid--folders">
                {% if parent_key != '' and current_key != '.' -%}
                    <li class="gallery-grid-item gallery-grid-item--back">
                        <a href="{{ ea_url().setRoute(route_name, '.' != parent_key ? { key: parent_key } : { }) }}" class="gallery-grid-item__link">
                            <span class="gallery-grid-item__icon"><i class="fas fa-arrow-left"></i></span>
                            <span class="gallery-grid-item__name">{{ 'back'|trans }}</span>
                        </a>
                    </li>
                {%- endif -%}

                {%- for directory in directories -%}
                    {% if joli_media_admin_is_granted('LIST', path: directory) %}
                        <li class="gallery-grid-item">
                            <a href="{{ ea_url().setRoute(route_name, { key: directory }) }}" class="gallery-grid-item__link">
                                <span class="gallery-grid-item__icon"><i class="fas fa-folder"></i></span>
                                <span class="gallery-grid-item__name">{{ directory|joli_media_admin_basename }}</span>
                            </a>
                        </li>
                    {% endif %}
                {%- endfor -%}
            </ul>

            <ul class="gallery-grid gallery-grid--files">
                {% for media in medias -%}
                    {% if joli_media_admin_is_granted('SHOW', path: media.path) %}
                        {{ block('media_grid_view') }}
                    {% endif %}
                {%- endfor %}
            </ul>
        {% endif %}

        {% if pagination is defined %}
            {% if pagination.infiniteScroll %}
                {% if pagination.page < pagination.totalPages %}
                    <div
                        data-infinite-scroll-trigger
                        data-current-page="{{ pagination.page }}"
                        data-total-pages="{{ pagination.totalPages }}"
                        data-has-more="{{ pagination.page < pagination.totalPages ? 'true' : 'false' }}"
                        data-route-name="{{ route_name }}"
                        data-current-key="{{ current_key }}"
                        style="height: 1px;"
                    ></div>
                {% endif %}
                <div class="list-pagination">
                    <div class="list-pagination-counter text-center">
                        {{ 'paginator.results'|trans({'%count%': pagination.total}, 'EasyAdminBundle')|raw }}
                        {% if pagination.page < pagination.totalPages %}
                            <span class="text-muted">{{ '(showing %count%)'|trans({'%count%': pagination.page * pagination.perPage}, 'EasyAdminBundle') }}</span>
                        {% endif %}
                    </div>
                </div>
            {% elseif pagination.totalPages > 1 %}
                <div class="list-pagination">
                    <div class="list-pagination-counter">
                        {{ 'paginator.results'|trans({'%count%': pagination.total}, 'EasyAdminBundle')|raw }}
                    </div>
                    <nav class="pager list-pagination-paginator {{ pagination.page == 1 ? 'first-page' }} {{ pagination.page == pagination.totalPages ? 'last-page' }}">
                        <ul class="pagination">
                            <li class="page-item page-item-previous {{ pagination.page == 1 ? 'disabled' }}">
                                <a class="page-link" href="{{ pagination.page == 1 ? '#' : ea_url().setRoute(route_name, { key: current_key }).set('page', pagination.page - 1) }}">
                                    <twig:ea:Icon name="internal:chevron-left" class="mx-1" aria-hidden="true" />
                                    <span class="btn-label">{{ 'paginator.previous'|trans({}, 'EasyAdminBundle') }}</span>
                                </a>
                            </li>

                            {% set showFirst = pagination.page > 3 %}
                            {% set showLast = pagination.page < pagination.totalPages - 2 %}

                            {% if showFirst %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ ea_url().setRoute(route_name, { key: current_key }).set('page', 1) }}">1</a>
                                </li>
                                {% if pagination.page > 4 %}
                                    <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
                                {% endif %}
                            {% endif %}

                            {% for i in max(1, pagination.page - 2)..min(pagination.totalPages, pagination.page + 2) %}
                                <li class="page-item {{ i == pagination.page ? 'active' }}">
                                    <a class="page-link" href="{{ ea_url().setRoute(route_name, { key: current_key }).set('page', i) }}">{{ i }}</a>
                                </li>
                            {% endfor %}

                            {% if showLast %}
                                {% if pagination.page < pagination.totalPages - 3 %}
                                    <li class="page-item disabled"><span class="page-link">&hellip;</span></li>
                                {% endif %}
                                <li class="page-item">
                                    <a class="page-link" href="{{ ea_url().setRoute(route_name, { key: current_key }).set('page', pagination.totalPages) }}">{{ pagination.totalPages }}</a>
                                </li>
                            {% endif %}

                            <li class="page-item page-item-next {{ pagination.page == pagination.totalPages ? 'disabled' }}">
                                <a class="page-link" href="{{ pagination.page == pagination.totalPages ? '#' : ea_url().setRoute(route_name, { key: current_key }).set('page', pagination.page + 1) }}">
                                    <span class="btn-label">{{ 'paginator.next'|trans({}, 'EasyAdminBundle') }}</span>
                                    <twig:ea:Icon name="internal:chevron-right" class="mx-1" aria-hidden="true" />
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}

{% block content_header_wrapper %}
    <div class="joli-media-header-tools">
        <section class="content-header">
            {% block content_header %}
                <div class="content-header-title">
                    <h1 class="title d-none">{{ 'media_library'|trans }}</h1>
                    <div class="btn-group" role="group" aria-label="Change view mode">
                        <a href="{{ ea_url().setRoute(route_name, { key: current_key, view_mode: 'list' }) }}" class="btn btn-secondary {{ app.session.get('view_mode', 'grid') == 'list' ? 'active disabled' }}">
                            <span>
                                <i class="fas fa-list"></i> {{ 'view.list'|trans }}
                            </span>
                        </a><a href="{{ ea_url().setRoute(route_name, { key: current_key, view_mode: 'grid' }) }}" class="btn btn-secondary {{ app.session.get('view_mode', 'grid') == 'grid' ? 'active disabled' }}">
                            <span>
                                <i class="fas fa-th-large"></i> {{ 'view.grid'|trans }}
                            </span>
                        </a>
                    </div>
                </div>

                {% block page_actions_wrapper %}
                    <div class="page-actions">
                        {% block page_actions %}
                            {{ block('delete_directory_button') }}
                            {{ block('rename_directory_button') }}
                            {% block create_directory_button %}
                                {% if joli_media_admin_is_granted('CREATE_DIRECTORY', path: current_key) %}
                                    <a
                                        class="btn btn-secondary me-sm-2"
                                        data-component="folder-create"
                                        role="button"
                                        tabindex="0"
                                    >
                                        <span class="icon btn-icon"><i class="fa-solid fa-folder-plus"></i></span>
                                        <span class="btn-label">{{ 'directory.create'|trans }}</span>
                                    </a>
                                {% endif %}
                            {% endblock %}
                            {{ block('choose_directory_button') }}
                            {% if joli_media_admin_is_granted('UPLOAD', path: current_key) %}
                                {{ block('add_media_button') }}
                            {% endif %}
                        {% endblock %}
                    </div>
                {% endblock %}
            {% endblock content_header %}
        </section>
        <div class="dropzone-container">
            {{ form_start(create_media_form, { attr: {
                class: 'dropzone',
                'data-component': 'dropzone',
                'data-dropzone-config': config.uploadOptions|json_encode(constant('JSON_THROW_ON_ERROR')),
            } }) }}
                {{ form_widget(create_media_form.path) }}
                {{ form_widget(create_media_form._token) }}
                <div class="dz-preview-template">
                    {{ include('@JoliMediaEasyAdmin/uploaded_file_preview.html.twig') }}
                </div>
            </form>
        </div>
        <div class="new-directory-container">
            {{ form_start(create_directory_form, { action: ea_url().setRoute('joli_media_easy_admin_create_directory') }) }}
                {{ form_widget(create_directory_form.directory) }}
                {{ form_widget(create_directory_form.submit) }}
            {{ form_end(create_directory_form) }}
        </div>
        {{ block('rename_directory_container') }}
    </div>
{% endblock %}
