{%- if this.webpAlternativeSource is not null -%}
    <twig:joli:Source
        variation="{{ this.webpAlternativeSource }}"
        media="{{ this.media.media }}"
        skipAutoDimensions="{{ skipAutoDimensions }}"
    />
{% endif %}
<img
    src="{{ this.path }}"
    {{- attributes.defaults({ loading: 'lazy', decoding: 'async' }) }}
    {{- attributes.nested('img') }}
    {% if this.srcset is not empty -%}
        srcset="
            {%- for width, srcset in this.srcset %}
                {{- (loop.first ? '' : ', ') -}}
                {{- srcset }} {{ width }}w
            {%- endfor -%}
        "
    {% endif %}
    {% if this.sizes is not null -%}
        sizes="{{ this.sizes }}"
    {% endif %}
    {% if this.class is not null -%}
        class="{{ this.class }}"
    {% endif %}
    {% if this.width is not null -%}
        width="{{ this.width }}"
    {% endif %}
    {% if this.height is not null -%}
        height="{{ this.height }}"
    {% endif %}
/>
